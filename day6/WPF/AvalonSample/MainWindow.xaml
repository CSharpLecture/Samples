<Window x:Class="AvalonSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Text="{Binding Title}" />

        <TextBox Grid.Row="1" Text="{Binding Description}" />

        <DatePicker Grid.Row="2" DisplayDate="{Binding DueDate}" />
    </Grid>
</Window>
